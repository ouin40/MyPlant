<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plant_Storage">

    <TextView
        android:id="@+id/judulstr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/plants"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tanaman"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/plant1"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/namaTanaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tanaman"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Plant"
        android:id="@+id/addPlant"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/dark_primary"
        android:layout_gravity="bottom|center"
        />

</FrameLayout>